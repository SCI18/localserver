[Unit]
Description=IDE Server
After=network.target

[Service]
Type=simple
User="your user"
WorkingDirectory=/home/"your user"/ide-server
Environment="DATABASE_URL=sqlite://ide_server.db"
Environment="RUST_LOG=info"
ExecStart=/home/"your user"/ide-server/target/release/ide-server
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
